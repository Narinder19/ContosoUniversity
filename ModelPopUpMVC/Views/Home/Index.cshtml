@model IEnumerable<ModelPopUpMVC.Models.FriendsInfo>
@{
    ViewBag.Title = "Home Page";
}
@section scripts
{
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        var TeamDetailPostBackURL = '/Home/Details';


    </script>
    <script src="~/CustomJS/PopUpDetails.js"></script>

}

<div class="jumbotron">
    <h1>Model Pop Up MVC</h1>
    <p class="lead">implement modal pop up to display the detailed information of user after clicking on detail anchor. </p>

</div>

<div>
    <p>
        @Html.ActionLink("Home", "Index")
        @using (Html.BeginForm("Search", "Home", FormMethod.Post))
        {
            <table>
                <tr>
                    <td><input type="text" id="txtName" name="searchparam" placeholder="type here to search" /></td>
                    <td><input type="submit" id="btnSubmit" value="Search" /></td>
                </tr>
            </table>
        }
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a href="javascript:void(0);" class="anchorDetail" data-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </table>
    <div id="myModal" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div id="myModalContent"></div>
            </div>
        </div>

    </div>
</div>